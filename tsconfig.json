{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": [
      "esnext",
      "dom",
      "es6"
    ],
    "allowJs": false,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "dist"
  },
  "include": [
    "src"
  ],
  "exclude": [
    ".eslintrc.js",
    ".jestrc.js",
    "babel.config.js",
    "prettier.config.js"
  ]
}
